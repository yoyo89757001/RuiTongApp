<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/write"
    android:id="@+id/fffr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/cfd"
        android:layout_marginTop="@dimen/sp_16"
        android:layout_marginBottom="@dimen/sp_16"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginRight="@dimen/sp_16"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/write"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:minHeight="120dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textSize="20sp"
                android:textColor="@color/blake"
                android:maxLines="3"
                android:id="@+id/title"
                android:text="asdsad"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginRight="@dimen/sp_16"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/couent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginRight="@dimen/sp_16"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/title"
                android:text="fffffff"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginRight="@dimen/sp_16"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:layout_below="@+id/couent"
                android:text="fffffff"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="40dp"
                android:padding="10dp"
                android:id="@+id/shanchu_im"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_select"
                android:layout_alignParentTop="true"
                android:layout_height="40dp" />


        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>