<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.ruitongapp.ui.FaBuGongGaoActivity">

    <include layout="@layout/base_title"
        android:id="@+id/op"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/blake"
            android:text="标题:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.ruitongapp.view.MyEditText
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:id="@+id/biaoti"
            android:gravity="center_vertical"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/shijian_ll"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/blake"
            android:text="发布时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shijian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/sp_16" />

            <View
                android:background="#7F7FFF"
                android:layout_marginTop="-1dp"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"/>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:text="内容:"
        android:textSize="16sp"
        android:textColor="@color/blake"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:gravity="top|left|start"
        android:paddingTop="8dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/textcolor"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/neirong"
        android:paddingBottom="8dp"
        android:layout_marginLeft="@dimen/sp_16"
        android:background="@drawable/zhongkong"
        android:layout_marginRight="@dimen/sp_16"
        android:layout_height="wrap_content" />



</LinearLayout>
