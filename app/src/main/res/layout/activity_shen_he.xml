<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user_info"
    android:background="@color/write"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@color/write"
        android:layout_below="@+id/op"
        android:id="@+id/ddd"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/op"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:background="#eeeeee"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/l2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#0165FF"
                android:paddingBottom="@dimen/sp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/write"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="100dp"
                    android:id="@+id/fangkeruku"
                    android:background="@drawable/zidonghuoqu5"
                    android:layout_height="100dp" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/r1"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:id="@+id/gonghao111"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来访人"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/sp_16"
                    android:id="@+id/laifangren"
                    android:background="@null"
                    android:hint="来访人"
                    android:textColorHint="@color/textcolor"
                    android:gravity="right|center_vertical"
                    android:layout_toRightOf="@+id/gonghao111"
                    android:textColor="@color/textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/r2"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:id="@+id/gonghao2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="被访人"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/gonghao2"
                    android:id="@+id/beifangren"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:hint="被访人"
                    android:textColorHint="@color/textcolor"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r3"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="手机号"
                    android:id="@+id/bm"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/bm"
                    android:id="@+id/shouji"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColorHint="@color/textcolor"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r4"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来访目的"
                    android:id="@+id/zw"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/zw"
                    android:id="@+id/zhiwei"
                    android:hint="来访目的"
                    android:textColorHint="@color/textcolor"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ruzhi"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/view_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来访时间"
                    android:textColor="@color/blake"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ruzhishijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColorHint="@color/textcolor"
                    android:hint="来访时间"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r5"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来源"
                    android:id="@+id/yx"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:id="@+id/beizhu"
                    android:hint="来源"
                    android:textColorHint="@color/textcolor"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <View
                android:id="@+id/v2"
                android:background="@color/view_bg"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="通 过"
                    android:textColor="@color/write"
                    android:textSize="16sp"
                    android:background="@drawable/jiaohu3"
                    android:gravity="center"
                    android:id="@+id/tongguo"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp" />

                <Button
                    android:text="拒 绝"
                    android:textColor="@color/write"
                    android:textSize="16sp"
                    android:background="@drawable/jiaohu6"
                    android:gravity="center"
                    android:id="@+id/jujue"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <include layout="@layout/base_title"

        android:id="@+id/op"/>


</RelativeLayout>
