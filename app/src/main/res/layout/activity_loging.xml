<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/write"
    android:fitsSystemWindows="true"
    tools:context="com.example.ruitongapp.ui.LogingActivity">

    <TextView
        android:text="更改服务器"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:id="@+id/fr"
        android:paddingBottom="4dp"
        android:textColor="@color/lanse"
        android:paddingRight="@dimen/sp_16"
        android:paddingEnd="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/ruitonglogo"
        android:layout_width="wrap_content"
        android:layout_above="@+id/cfd"
        android:id="@+id/imim"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/cfd"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/write"
        android:layout_centerInParent="true"
        app:cardElevation="@dimen/sp_16"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="智能人员管理"
                android:textColor="@color/lanse"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
<View
    android:background="@color/lanse"
    android:layout_width="match_parent"
    android:layout_height="2dp"/>
<LinearLayout
    android:layout_weight="5"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/zhongkong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/zhanghao"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="账号"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@null"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:id="@+id/youxiang"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/zhongkong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/i3"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="密码"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/mima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/textcolor"
            android:textSize="16sp" />

    </LinearLayout>
    
    
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/write"
        android:textSize="16sp"
        android:id="@+id/denglu"
        android:text="登 录"
        android:layout_marginTop="20dp"
        android:background="@drawable/jiaohu"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

</LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
