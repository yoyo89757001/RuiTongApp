<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_user_info"
    android:background="@color/write"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@color/write"
        android:layout_below="@+id/op"
        android:id="@+id/ddd"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/op"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/l2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#0165FF"
                android:paddingBottom="@dimen/sp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/write"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:text="识别照片"
                    android:textColor="@color/write"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="110dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/bai"
                    android:id="@+id/fangkeruku"
                    android:src="@drawable/tuijianyisheng"
                    android:layout_height="110dp" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:id="@+id/gonghao111"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来访人"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/sp_16"
                    android:id="@+id/laifangren"
                    android:background="@null"
                    android:hint="请输入来访人"
                    android:textColorHint="@color/textcolor"
                    android:gravity="right|center_vertical"
                    android:layout_toRightOf="@+id/gonghao111"
                    android:textColor="@color/textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:id="@+id/gonghao2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="被访人"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/gonghao2"
                    android:id="@+id/beifangren"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:hint="请输入被访人"
                    android:textColorHint="@color/textcolor"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="手机号"
                    android:id="@+id/bm"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/bm"
                    android:id="@+id/shouji"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColorHint="@color/textcolor"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来访目的"
                    android:id="@+id/zw"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/zw"
                    android:id="@+id/zhiwei"
                    android:hint="请输入来访目的"
                    android:textColorHint="@color/textcolor"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ruzhi"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/view_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="来访时间"
                    android:textColor="@color/blake"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ruzhishijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/ee65"
                    android:layout_toStartOf="@+id/ee65"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColorHint="@color/textcolor"
                    android:hint="请选择来访时间"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ee65"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_go3x" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r5"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="备注"
                    android:id="@+id/yx"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/yx"
                    android:id="@+id/beizhu"
                    android:hint="请输入备注"
                    android:textColorHint="@color/textcolor"
                    android:layout_marginRight="@dimen/sp_16"
                    android:textColor="@color/textcolor"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />

            </RelativeLayout>


            <View
                android:background="@color/view_bg"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

            <RelativeLayout
                android:id="@+id/vip"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:text="是否为VIP"
                    android:textColor="@color/blake"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/kai"
                    android:id="@+id/ee63"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/r6"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <View
                    android:background="@color/view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"/>

                <TextView
                    android:textColor="@color/blake"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="显示头像"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />


                <TextView
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:layout_marginTop="4dp"
                    android:text="显示在迎宾界面的头像"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/gongga4p"
                    android:textColor="@color/textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ee4"/>

                <ImageView
                    android:id="@+id/touxiang"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/morentouxiang"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ee4" />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_go3x"
                    android:id="@+id/ee4"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:background="@color/view_bg"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>

            <Button
                android:text="删  除"
                android:textColor="@color/write"
                android:textSize="16sp"
                android:background="@drawable/jiaohu"
                android:gravity="center"
                android:id="@+id/shanchu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>
    </ScrollView>


    <include layout="@layout/base_title"

        android:id="@+id/op"/>


</RelativeLayout>
