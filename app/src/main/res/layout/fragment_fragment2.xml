<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.ruitongapp.fargments.Fragment2">

    <RelativeLayout
        android:id="@+id/ty"
        android:background="@color/lanse"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:text="访客管理"
        android:textSize="20sp"
        android:paddingLeft="@dimen/sp_16"
        android:id="@+id/erer"
        android:layout_centerVertical="true"
        android:textColor="@color/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/sousuo"
        android:layout_width="50dp"
        android:src="@drawable/i7"
        android:layout_marginRight="2dp"
        android:padding="14dp"
        android:layout_toLeftOf="@+id/tianjia"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/tianjia"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="14dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/tj"
        android:layout_height="match_parent" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/view_bg"
        android:layout_below="@+id/ty"
        android:id="@+id/rq"
        android:layout_height="0.8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/rq"
            android:id="@+id/ffhh"
            android:paddingRight="80dp"
            android:paddingLeft="16dp"
            android:background="@color/write"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:id="@+id/l1"
                android:background="@drawable/jiaohu_fangke"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:text="待审核"
                    android:textColor="@color/textcolor"
                    android:id="@+id/t1"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="14dp"
                    android:src="@drawable/xia"
                    android:layout_height="14dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jiaohu_fangke"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="通过"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/xia" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:background="@drawable/jiaohu_fangke"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:text="拒绝"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/t3"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="14dp"
                    android:src="@drawable/xia"
                    android:layout_height="14dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/l4"
                android:background="@drawable/jiaohu_fangke"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:text="全部"
                    android:textColor="@color/blake"
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/t4"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="14dp"
                    android:src="@drawable/xia"
                    android:layout_height="14dp" />

            </LinearLayout>


        </LinearLayout>
    <View
        android:background="@color/view_bg"
        android:id="@+id/ggg"
        android:layout_below="@+id/ffhh"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/ggg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
