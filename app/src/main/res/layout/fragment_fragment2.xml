<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.ruitongapp.fargments.Fragment2">

    <RelativeLayout
        android:id="@+id/ty"
        android:background="@color/lanse"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:text="访客管理"
        android:textSize="20sp"
        android:paddingLeft="@dimen/sp_16"
        android:id="@+id/erer"
        android:layout_centerVertical="true"
        android:textColor="@color/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/sousuo"
        android:layout_width="50dp"
        android:src="@drawable/i7"
        android:layout_marginRight="2dp"
        android:padding="14dp"
        android:layout_toLeftOf="@+id/tianjia"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/tianjia"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="14dp"
        android:layout_marginRight="22dp"
        android:src="@drawable/tj"
        android:layout_height="match_parent" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/view_bg"
        android:layout_below="@+id/ty"
        android:id="@+id/rq"
        android:layout_height="0.8dp"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/rq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
